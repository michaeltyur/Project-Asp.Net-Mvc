@model List<Models.Item>


@{
    string[] imgSources = new string[3];

    for (int i = 0; i < imgSources.Count(); i++)
    {
        if ( Model[i].Image1 != null)
        {
            var base64 = Convert.ToBase64String(Model[i].Image1);
            imgSources[i] = String.Format("data:image;base64,{0}", base64);
        }
        else if (Model[i].Image2 != null)
        {
            var base64 = Convert.ToBase64String(Model[i].Image2);
            imgSources[i] = String.Format("data:image;base64,{0}", base64);
        }
        else if (Model[i].Image3 != null)
        {
            var base64 = Convert.ToBase64String(Model[i].Image3);
            imgSources[i] = String.Format("data:image;base64,{0}", base64);
        }
        else
        {
            //imgSrc = "~Models/Images/No_Image_Available.jpg";
            imgSources[i] = "../../Images/No_Image_Available.jpg";
        }
    }
}

<div class="ads-container">
    <div class="ads-title"><h3>Last Items</h3></div>
    <div id="first-item" class="div-images">
        <img id="first-image" class="ads-images" src="@imgSources[0]" />
    </div>
        <div id="second-item" class="div-images">
            <img id="second-image" class="ads-images" src="@imgSources[1]" />
        </div>
        <div id="third-item" class="div-images">
            <img id="third-image" class="ads-images" src="@imgSources[2]" />
        </div>
</div>

<script src="@Url.Content("~/Scripts/timer.js")"></script>
